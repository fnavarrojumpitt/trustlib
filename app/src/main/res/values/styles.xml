<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/nav_white</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="WelcomeTheme" parent="AppTheme">
        <item name="colorControlNormal">@color/textColorWhite</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- EDIT TEXTS -->
    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:fontFamily">@font/fira_sans_extra_condensed</item>
        <item name="android:textColor">@color/textColorBlack</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="EditText.White" parent="EditText">
        <item name="android:theme">@style/WelcomeTheme</item>
        <item name="android:textColor">@color/textColorWhite</item>
    </style>

    <!-- INPUT LAYOUTS -->
    <style name="TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColorHint">@color/textColorBlack50</item>
    </style>

    <style name="TextInputLayout.White">
        <item name="android:textColorHint">@color/textColorWhite</item>
    </style>

    <!-- BUTTONS -->
    <style name="Button">
        <item name="android:textColor">@color/textColorBlack</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="ButtonBorderless" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:textColor">@color/textColorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="Button.Login" parent="Button">
        <item name="android:background">@drawable/login_button_normal</item>
    </style>

    <style name="Button.TouchId" parent="Button">
        <item name="android:background">@drawable/touch_button_normal</item>
    </style>

    <!-- TEXT -->
    <style name="Text">
        <item name="android:fontFamily">@font/fira_sans_extra_condensed</item>
    </style>

    <style name="Text.Bold" parent="Text">
        <item name="android:fontFamily">@font/fira_sans_extra_condensed_bold</item>
    </style>

    <style name="Text.Medium" parent="Text">
        <item name="android:fontFamily">@font/fira_sans_extra_condensed_medium</item>
    </style>

</resources>
