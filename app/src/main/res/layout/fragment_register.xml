<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            style="@style/Text.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Establece una contraseña"
            android:textColor="@color/textColorBlue"
            android:textSize="@dimen/textSizeNormal" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:textColorHint="@color/textColorBlack50">

            <android.support.design.widget.TextInputEditText
                style="@style/EditText"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_input_password_black"
                android:hint="Contraseña" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:textColorHint="@color/textColorBlack50">

            <android.support.design.widget.TextInputEditText
                style="@style/EditText"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_input_password_black"
                android:hint="Repetir Contraseña" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/open_sans"
            android:text="Para crear una nueva cuenta te solicitaremos algunos datos que son relevantes para nosotros y así completar tu registro..."
            android:textColor="@color/textColorBlack"
            android:textSize="@dimen/textSizeNormal" />

        <TextView
            style="@style/Text.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Establece una contraseña"
            android:textColor="@color/textColorBlue"
            android:textSize="@dimen/textSizeNormal" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:textColorHint="@color/textColorBlack50">

            <android.support.design.widget.TextInputEditText
                style="@style/EditText"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_input_user_black"
                android:hint="Nombre" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:textColorHint="@color/textColorBlack50">

            <android.support.design.widget.TextInputEditText
                style="@style/EditText"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_input_user_black"
                android:hint="Apellido" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:textColorHint="@color/textColorBlack50">

            <android.support.design.widget.TextInputEditText
                style="@style/EditText"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_input_cuid_black"
                android:hint="RUT" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:textColorHint="@color/textColorBlack50">

            <android.support.design.widget.TextInputEditText
                style="@style/EditText"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_input_email_black"
                android:hint="Correo Electrónico" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:textColorHint="@color/textColorBlack50">

            <android.support.design.widget.TextInputEditText
                style="@style/EditText"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_input_phone_black"
                android:hint="Teléfono"
                android:imeOptions="actionDone" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

</ScrollView>